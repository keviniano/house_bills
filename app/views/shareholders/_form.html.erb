<%= simple_form_for([@account,@shareholder], :html => {:class => 'form-horizontal' }) do |s| %>
  <%= s.error_notification %>
  <%= s.input :name, :disabled => @shareholder.user.present?, :input_html => { size: 25 } %>
  <%= s.association :role, :prompt => true, :include_blank => false %>
  <%= s.input :email, :disabled => @shareholder.user.present?, :input_html => { :size => 25 } %>
  <% unless @shareholder.new_record? %>
    <%= s.input :opened_on_string, as: :string, label: "Opened", input_html: { class: :datepicker } %>
    <%= s.input :inactivated_on_string, as: :string, label: "Inactivated", input_html: { class: :datepicker } %>
    <%= s.input :closed_on_string, as: :string, label: "Closed", input_html: { class: :datepicker } %>
  <% end %>
  <%= s.button :submit %>
<% end %>
