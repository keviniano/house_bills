<% simple_form_for([@account,@account_entry]) do |f| %>
  <%= f.input :entry_type, :as => :radio, :collection => AccountEntry.valid_entry_types %>
  <%= f.input :check_number, :input_html => {:size => 5} %>
  <%= f.input :date %>
  <% if @account_entry.type == 'UnboundAccountEntry' %>
    <%= f.input :payee %>
  <% else %>
    <%= f.association :shareholder, :collection => @account_entry.open_shareholders, :include_blank => false %>
  <% end %>
  <%= f.input :entry_amount, :input_html => {:size => 5} %>
  <%= f.input :note, :input_html => {:rows => 2} %>
  <%= f.input :cleared %>
  <%= f.button :submit %>
<% end %>
