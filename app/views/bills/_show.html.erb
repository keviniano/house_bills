<dl>
  <dt>Entry type</dt>
  <dd><%= bill.entry_type %></dd>

  <dt>Date</dt>
  <dd><%= bill.date %></dd>

  <% if bill.type == 'AccountBill' %>
    <dt>Check number</dt>
    <dd><%= bill.bill_account_entry.check_number || 'N/A' %></dd>

    <dt>Payee</dt>
    <dd><%= bill.payee %></dd>
  <% else %>
    <dt>Shareholder</dt>
    <dd><%= bill.shareholder.name %></dd>
  <% end %>

  <dt>Entry amount</dt>
  <dd><%= number_to_currency(bill.entry_amount) %></dd>

  <dt>Bill type</dt>
  <dd><%= bill.bill_type.name %></dd>

  <dt>Note</dt>
  <dd><%= bill.note %></dd>
</dl>

<h3>Bill Shares</h3>
<%= render "bills/shares", bill: bill %>

<p><%= link_to('Edit', [:edit,@account,bill], :class => 'btn') if can? :edit, bill %></p>
<% if can? :delete, bill %>
  <%= button_to "Delete", [@account,bill], {method: :delete, confirm: "Are you sure you want to delete this bill?", class: "btn btn-danger"} %>
<% end %>
