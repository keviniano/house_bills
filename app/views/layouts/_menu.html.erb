<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">Shared Bills</a>
      <div class="nav-collapse">
        <ul class="nav">
          <% if current_user %>
            <li class="dropdown open">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                Accounts
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% current_user.accounts.each do |account| %>
                  <li>
                    <%= link_to account.name, account %>
                  </li>
                <% end %>
              </ul>
            </li>
          <% end %>
          <% if @account %>
            <li class="dropdown open">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= @account.name %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'View account activity', account_balance_entries_path(@account) %>
                </li>
                <li>
                  <%= link_to 'View account ledger', account_account_entries_path(@account) %>
                </li>
                <li>
                  <%= link_to 'Enter a bill paid for by a housemate', new_account_shareholder_bill_path(@account) %>
                </li>
                <li>
                  <%= link_to 'Enter a bill that was paid directly out of this account', new_account_account_bill_path(@account) %>
                </li>
                <li>
                  <%= link_to 'Add an account entry for which a housemate should be credited', new_account_shareholder_account_entry_path(@account) %>
                </li>
                <li>
                  <%= link_to 'Add an account entry unrelated to bills', new_account_unbound_account_entry_path(@account) %>
                </li>
                <li>
                  <%= link_to 'Distribute account\'s pot', edit_pot_account_path(@account) %>
                </li>
                <li>
                  <%= link_to 'Account details', account_path(@account) %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>
        <ul class="nav pull-right">
          <li>
            <% if user_signed_in? %>
              Signed in as <%= current_user.name %>. 
              <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
            <% else %>
              <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
            <% end %>
          </li> 
        </ul>
      </div>
    </div>
  </div>
</div>

