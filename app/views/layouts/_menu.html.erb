<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Shared Bills</a>
      <div class="nav-collapse">
        <ul class="nav">
          <% if current_user %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                My Accounts
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% current_user.accounts.each do |account| %>
                  <li>
                    <%= link_to account.name, account %>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Create a new account", new_account_path %>
                  </li>
                <% end %>
              </ul>
            </li>
          <% end %>
          <% if @account %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= @account.name %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'View account activity', account_balance_events_path(@account) %>
                </li>
                <li>
                  <%= link_to 'View account ledger', account_account_entries_path(@account) %>
                </li>
                <li>
                  <%= link_to 'Enter a bill paid for by a housemate', new_account_shareholder_bill_path(@account) if can? :create, ShareholderBill %>
                </li>
                <li>
                  <%= link_to 'Enter a bill paid out of this account', new_account_account_bill_path(@account) if can? :create, AccountBill %>
                </li>
                <li>
                  <%= link_to 'Add an account entry to credit a housemate', new_account_shareholder_account_entry_path(@account) if can? :create, ShareholderAccountEntry %>
                </li>
                <li>
                  <%= link_to 'Add an account entry unrelated to bills', new_account_unbound_account_entry_path(@account) if can? :create, UnboundAccountEntry %>
                </li>
                <li>
                  <%= link_to 'Distribute account\'s pot', edit_pot_account_path(@account) %>
                </li>
                <li>
                  <%= link_to 'Account details', account_path(@account) %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>
        <ul class="nav pull-right">
          <% if user_signed_in? %>
            <li class="navbar-text"><%= link_to "Signed in as #{current_user.name}.", edit_user_registration_path %></li> 
            <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
          <% else %>
            <li class="navbar-text"><%= link_to "Sign up", new_user_registration_path %></li>
            <li><%= link_to "Sign in", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

